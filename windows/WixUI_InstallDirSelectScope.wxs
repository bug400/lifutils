<!--
First-time install dialog sequence:
 - WixUI_WelcomeDlg
 - WixUI_LicenseAgreementDlg
 - WixUI_InstallDirDlg
 - WixUI_VerifyReadyDlg
 - WixUI_DiskCostDlg

Maintenance dialog sequence:
 - WixUI_MaintenanceWelcomeDlg
 - SelectScopeDlg
 - AlreadyInstalledErrorDlg

Patch dialog sequence:
 - WixUI_WelcomeDlg
 - AlreadyInstalledErrorDlg

-->

<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <?foreach WIXUIARCH in X86;X64;A64 ?>
    <Fragment>
        <UI Id="WixUI_InstallDirSelectScope_$(WIXUIARCH)">
            <Publish Dialog="BrowseDlg" Control="OK" Event="CheckTargetPath" Value="[WIXUI_INSTALLDIR]" Order="1" />

            <Publish Dialog="InstallDirDlg" Control="Next" Event="CheckTargetPath" Value="[WIXUI_INSTALLDIR]" Order="1" />
            <Publish Dialog="InstallDirDlg" Control="Next" Event="NewDialog" Value="VerifyReadyDlg" Order="4" />
        </UI>

        <UIRef Id="WixUI_InstallDirSelectScope" />
    </Fragment>
    <?endforeach?>

    <?foreach WIXUIARCH in X86;X64;A64 ?>
    <Fragment>
        <UI Id="WixUI_InstallDirSelectScope_ExtendedPathValidation_$(WIXUIARCH)">
            <Publish Dialog="BrowseDlg" Control="OK" Event="DoAction" Value="WixUIValidatePath_$(WIXUIARCH)" Order="1" />
            <Publish Dialog="BrowseDlg" Control="OK" Event="SpawnDialog" Value="InvalidDirDlg" Order="2" Condition="WIXUI_INSTALLDIR_VALID&lt;&gt;&quot;1&quot;" />

            <Publish Dialog="InstallDirDlg" Control="Next" Event="DoAction" Value="WixUIValidatePath_$(WIXUIARCH)" Order="1" />
            <Publish Dialog="InstallDirDlg" Control="Next" Event="SpawnDialog" Value="InvalidDirDlg" Order="2" Condition="WIXUI_INSTALLDIR_VALID&lt;&gt;&quot;1&quot;" />
            <Publish Dialog="InstallDirDlg" Control="Next" Event="NewDialog" Value="VerifyReadyDlg" Order="4" Condition="WIXUI_INSTALLDIR_VALID=&quot;1&quot;" />
        </UI>

        <UIRef Id="WixUI_InstallDirSelectScope" />
    </Fragment>
    <?endforeach?>

    <Fragment>
        <UI Id="file WixUI_InstallDirSelectScope">
            <TextStyle Id="WixUI_Font_Normal" FaceName="Tahoma" Size="8" />
            <TextStyle Id="WixUI_Font_Bigger" FaceName="Tahoma" Size="12" />
            <TextStyle Id="WixUI_Font_Title" FaceName="Tahoma" Size="9" Bold="yes" />

            <Property Id="DefaultUIFont" Value="WixUI_Font_Normal" />

            <DialogRef Id="BrowseDlg" />
            <DialogRef Id="DiskCostDlg" />
            <DialogRef Id="ErrorDlg" />
            <DialogRef Id="FatalError" />
            <DialogRef Id="FilesInUse" />
            <DialogRef Id="MsiRMFilesInUse" />
            <DialogRef Id="PrepareDlg" />
            <DialogRef Id="ProgressDlg" />
            <DialogRef Id="ResumeDlg" />
            <DialogRef Id="UserExit" />

            <Publish Dialog="ExitDialog" Control="Finish" Event="EndDialog" Value="Return" Order="999" />

            <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="LicenseAgreementDlg" Condition="NOT Installed" />
            <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="VerifyReadyDlg" Condition="Installed AND PATCH" />

            <!--
               Customization begins here ...
               Note: if there is an incompatible NSIS installation present, then the SelectScopeDlg
               dialog exits to an error dialog when pressing the Next button.
            -->
            <Publish Dialog="LicenseAgreementDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" />
            <Publish Dialog="LicenseAgreementDlg" Control="Next" Event="NewDialog" Value="SelectScopeDlg" Condition="LicenseAccepted = &quot;1&quot;" />
            

            <Publish Dialog="SelectScopeDlg" Control="InstallScopeBack" Event="NewDialog" Value="LicenseAgreementDlg" />
            <Publish Dialog="SelectScopeDlg" Control="InstallScopeNext" Event="NewDialog" Value="ErrorNSISVersionDlg" Condition ="ASSISTANCE_USERS = &quot;cur&quot; AND NSIS_CURRENTUSERS"/>
            <Publish Dialog="SelectScopeDlg" Control="InstallScopeNext" Event="NewDialog" Value="ErrorNSISVersionDlg" Condition ="ASSISTANCE_USERS = &quot;all&quot; AND NSIS_ALLUSERS"/>
            <Publish Dialog="SelectScopeDlg" Control="InstallScopeNext" Event="NewDialog" Value="ErrorAlreadyInstalledDlg" Condition = "Installed" />
<!-- does not work ??
            <Publish Dialog="SelectScopeDlg" Control="InstallScopeNext" Event="NewDialog" Value="InstallDirDlg" Condition = "ASSISTANCE_USERS = &quot;cur&quot; AND (NOT NSIS_CURRENTUSERS)" />
            <Publish Dialog="SelectScopeDlg" Control="InstallScopeNext" Event="NewDialog" Value="InstallDirDlg" Condition = "ASSISTANCE_USERS = &quot;all;&quot; AND (NOT NSIS_ALLUSERS)" />
-->
            <Publish Dialog="SelectScopeDlg" Control="InstallScopeNext" Event="NewDialog" Value="InstallDirDlg" />
            <Publish Dialog="InstallDirDlg" Control="Back" Event="NewDialog" Value="SelectScopeDlg" />
    
            <!--
               Customization ends here
            -->
            <Publish Dialog="InstallDirDlg" Control="Next" Event="SetTargetPath" Value="[WIXUI_INSTALLDIR]" Order="3" />
            <Publish Dialog="InstallDirDlg" Control="ChangeFolder" Property="_BrowseProperty" Value="[WIXUI_INSTALLDIR]" Order="1" />
            <Publish Dialog="InstallDirDlg" Control="ChangeFolder" Event="SpawnDialog" Value="BrowseDlg" Order="2" />

            <Publish Dialog="BrowseDlg" Control="OK" Event="SetTargetPath" Value="[_BrowseProperty]" Order="3" />
            <Publish Dialog="BrowseDlg" Control="OK" Event="EndDialog" Value="Return" Order="4" />

            <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="InstallDirDlg" Order="1" Condition="NOT Installed" />
            <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2" Condition="Installed AND PATCH" />

            <Publish Dialog="MaintenanceWelcomeDlg" Control="Next" Event="NewDialog" Value="SelectScopeDlg" />


            <Property Id="ARPNOMODIFY" Value="1" />
        </UI>

        <UIRef Id="WixUI_Common" />
        <UIRef Id="SelectScopeUI"/>
    </Fragment>
</Wix>
